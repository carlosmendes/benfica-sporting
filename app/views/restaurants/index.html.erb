<% restaurants = ['Frade Mares', 'Cantinho Lusitano', 'Charrua', 'Ramiro'] %>

<h1>Restaurants</h1>
<p>List updated at <%= Date.today %></p>


<!-- List restaurants -->
<ul>
<% restaurants.each do |r| %>
	<li><%= r %></li>
<% end %>
</ul>


<!-- Get form - params go on the url -->
<p>Get Form</p>
<form action="/restaurants" method="get">
  <input type="text" name="food_type" placeholder="What kind of food?">
  <input type="submit">
</form>

<!-- List restaurants using instance variables -->
<ul>
<% @restaurants.each do |r| %>
	<li><%= r[:name] %> - <%= r[:category] %></li>
<% end %>
</ul>


<p>Create new restaurant</p>
<form action="/restaurants" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="name">
  <input type="text" name="address">
  <input type="submit">
</form>



